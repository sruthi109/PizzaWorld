<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear"
    tools:context=".ui.home.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:id="@+id/two"
                        android:background="@drawable/twotwo">

                    </Button>

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/texttwo"
                        android:textColor="@color/mainAppColor"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="Two Topping Pizza"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/threee">
                    </Button>

                    <TextView

                        android:padding="5dp"
                        android:id="@+id/textthree"
                        android:textColor="@color/mainAppColor"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Three Topping Pizza"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/realcombo">

                    </Button>
                    <TextView

                        android:padding="5dp"
                        android:id="@+id/textcombo"
                        android:textColor="@color/mainAppColor"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Combo Order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/custo">

                    </Button>
                    <TextView
                        android:padding="5dp"
                        android:id="@+id/textcusto"
                        android:textColor="@color/mainAppColor"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Customise Order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/extras">

                    </Button>
                    <TextView

                        android:padding="5dp"
                        android:id="@+id/textextra"
                        android:textColor="@color/mainAppColor"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Extra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>
</LinearLayout>